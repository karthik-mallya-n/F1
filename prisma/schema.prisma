generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Manager {
  id         Int      @id @default(autoincrement())
  first_name String
  last_name  String?
  company    String
  email      String   @unique
  password   String
  Driver     Driver[]

  @@map("managers")
}

model Driver {
  id            Int     @id @default(autoincrement())
  first_name    String
  last_name     String?
  description   String?
  country       String
  car           String?
  points        Int     @default(0)
  wins          Int     @default(0)
  podiums       Int     @default(0)
  championships Int     @default(0)
  managerId     Int
  manager       Manager @relation(fields: [managerId], references: [id])
  Race          Race[]
}

model Race {
  id           Int      @id @default(autoincrement())
  location     String
  date         DateTime @default(now())
  winnerId     Int
  winner       Driver   @relation(fields: [winnerId], references: [id])
  laps         Int
  hours        Int
  minutes      Int
  seconds      Int
  milliseconds Int
}
